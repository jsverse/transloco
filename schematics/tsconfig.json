{
  "compilerOptions": {
    "baseUrl": "tsconfig",
    "lib": ["es2018", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": false,
    "noImplicitThis": false,
    "rootDir": "./",
    "sourceMap": true,
    "strictNullChecks": false,
    "target": "es6",
    "types": ["node", "jest"]
  },
  "include": ["./**/*"],
  "exclude": ["src/*/files/**/*", "src/**/*.spec.ts"]
}
